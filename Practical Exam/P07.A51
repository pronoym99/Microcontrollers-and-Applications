ORG 0000H
MOV R0, #30H; INITIALISE LOCATION POINTER
MOV R2, #01H; INCREMENTAL VALUE
MOV R3, #10H; COUNT WITH 1 HIGHER VALUE
MOV A, R2; 1ST VALUE
LOOP:	MOV @R0,A;		STORE THE VALUE IN LOCATION
		INC R0;			INCREMENT LOCATION POINTER
		INC R2;			INCREMENT INCREMENTAL VALUE
		ADD A, R2;		ADD THE NEW INCREMENTAL VALUE TO CURRENT VALUE IN ACCUMULATOR
		DJNZ R3, LOOP;	DECREMENT COUNTER AND IF NOT ZERO THEN JUMP TO LOOP
END
